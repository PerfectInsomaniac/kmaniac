<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kmaniac"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.kmaniac.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.kmaniac.InitialPage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.kmaniac.InitialPage" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.kmaniac.boardDisplay"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.kmaniac.boardDisplay" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.kmaniac.fourBoard"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.kmaniac.fourBoard" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.kmaniac.credit"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.kmaniac.credit" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.kmaniac.howtoplay"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.kmaniac.howtoplay" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>